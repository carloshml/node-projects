<!DOCTYPE html>
<html lang="pt-br">

<head>
	<meta charset="UTF-8">
	<title>Multiroom Chat</title>

	<!-- Bootstrap 4 -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
	<!-- Material Icons -->
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

	<link href="css/style.css" rel="stylesheet">
	<style>
		body {
			padding-top: 70px;
			padding-bottom: 70px;
			background-color: #f8f9fa;
		}

		.navbar-brand {
			font-weight: bold;
		}

		#dialogos .dialogo {
			margin-bottom: 15px;
			padding: 10px 15px;
			border-radius: 15px;
			max-width: 70%;
			word-wrap: break-word;
		}

		.dialogo-pessoal {
			background-color: #d1ecf1;
			align-self: flex-end;
			margin-left: auto;
		}

		.dialogo-do-outro {
			background-color: #fff3cd;
			align-self: flex-start;
			margin-right: auto;
		}

		.mensagem {
			margin: 0;
		}

		.dialogos {
			display: flex;
			flex-direction: column;
			height: 85vh;
			overflow-y: auto;
			padding: 10px;
			background-color: #ffffff;
			border: 1px solid #dee2e6;
			border-radius: 5px;
		}

		#pessoas .participante {
			display: block;
			padding: 8px;
			border-bottom: 1px solid #dee2e6;
		}

		.campo-mensagem {
			background-color: #ffffff;
			padding: 10px;
			border-top: 1px solid #dee2e6;
		}

		.input-group .form-control {
			border-radius: 20px;
		}

		.input-group-btn .btn {
			border-radius: 20px;
		}

		.apelido-destacado {
			display: block;
			font-weight: bold;
			font-size: 14px;
			color: #007bff;
			/* azul Bootstrap */
			margin-bottom: 5px;
		}

		.participante {
			display: block;
			padding: 5px 10px;
			border-bottom: 1px solid #dee2e6;
		}

		.participante.font-weight-bold {
			font-weight: bold;
			color: #007bff;
		}
	</style>
	<script src="/socket.io/socket.io.js">	</script>

	<script type="text/javascript">



		document.addEventListener("DOMContentLoaded", function () {

			const apelido = $('#apelido_now_user').val();



			$("#btn_logout").click(function () {
				socket.emit('logout', { apelido: apelido });
				window.location.href = '/';
			});


			$("#exibe_chat").click(function () {
				$("#conversa").show();
				$("#participantes").hide();
				ocultaNavbar();
			});

			$("#exibe_participantes").click(function () {
				$("#participantes").show();
				$("#conversa").hide();
				ocultaNavbar();
			});


			socket.on('msgParaCliente',
				function (data) {
					var html = '';
					if (apelido === data.apelido) {
						html += "<div class='dialogo dialogo-pessoal ' >";
					} else {
						html += "<div class='dialogo  dialogo-do-outro' >"
						html += '<span class="apelido-destacado">' + data.apelido + '</span>';
					}

					if (apelido === data.apelido && data.mensagem === 'acabou de entrar no chat') {
						html += '<p class="mensagem"> Bem Vindo ao chat</p>';
					} else {
						html += '<p class="mensagem">' + data.mensagem + '</p>';
					}


					html += '</div  >';

					$('#dialogos').append(html);
					document.getElementById('dialogos').scrollTo(0, document.getElementById('dialogos').scrollHeight);
				});

			socket.on('participantesParaCliente', function (data) {
				$('#pessoas').html('');

				const apelidoAtual = $('#apelido_now_user').val();
				let html = '';

				// Primeiro, adiciona o apelido do usuário atual
				if (data.apelidosParticipantes.includes(apelidoAtual)) {
					html += '<span class="participante font-weight-bold text-primary">' + apelidoAtual + ' (você)</span>';
				}

				// Depois, adiciona os demais participantes
				for (const apelido of data.apelidosParticipantes) {
					if (apelido !== apelidoAtual) {
						html += '<span class="participante">' + apelido + '</span>';
					}
				}

				$('#pessoas').append(html);
			});


		})
		function ocultaNavbar() {
			$("#btn_navbar_toggle").attr("class", "navbar-toggle collapsed");
			$("#navbar-collapse-1").attr("class", "navbar-collapse collapse");
			$("#btn_navbar_toggle").attr("aria-expanded", "false");
			$("#navbar-collapse-1").attr("aria-expanded", "false");
		}
		var socket = io('http://localhost:3000');
		function enviarMensagem() {

			if (!$('#mensagem').val()) {
				return;
			}
			let corpoMensagem = {
				apelido: $('#apelido_now_user').val(),
				mensagem: $('#mensagem').val(),
				apelidoAtualizadosNosClientes: $('#apelido_now_user_atualizados_nos_clientes').val()
			};


			socket.emit('msgParaServidor', corpoMensagem);
			$('#mensagem').val('')
			$('#apelido_now_user_atualizados_nos_clientes').val(1);
			document.getElementById('dialogos').scrollTo(0, document.getElementById('dialogos').scrollHeight);
		}

		function enviarMsgEnter(eventKey) {
			if (eventKey.code === "Enter") {
				enviarMensagem();
			}
		}
	</script>
</head>

<body>
	<!-- Navbar -->
	<nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
		<div class="container">
			<a class="navbar-brand" href="#">Multiroom Chat</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav ml-auto">
					<li class="nav-item">
						<a class="nav-link" href="#" id="btn_logout">SAIR</a>
					</li>

				</ul>
			</div>
		</div>
	</nav>

	<!-- Conteúdo -->
	<div class="container">
		<div class="row">
			<!-- Área de diálogo (mais larga) -->
			<div class="col-md-9" id="conversa">
				<div id="dialogos" class="dialogos"></div>
			</div>

			<!-- Área de participantes (mais estreita) -->
			<div class="col-md-3">

				<div class="dialogos">
					<h5 class="text-center font-weight-bold">Participantes</h5>
					<div id="participantes">
						<div id="pessoas">
							<h4>Carregando ... </h4>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Campo de mensagem -->
	<footer class="  fixed-bottom campo-mensagem bg-light">
		<div class="container py-2">
			<div class="row">
				<div class="col-12">
					<div class="input-group">
						<input type="text" id="mensagem" style="flex: 1 1 auto;" placeholder="Digite sua mensagem..."
							onkeyup="enviarMsgEnter(event)" maxlength="240">
						<input type="hidden" id="apelido_now_user" value="<%=dadosForm.apelido%>">
						<input type="hidden" id="apelido_atualizados_nos_clientes" value="0">
						<div class="input-group-append">
							<button class="btn btn-primary" onclick="enviarMensagem()" type="button">
								<i class="material-icons">send</i>
							</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</footer>

	<!-- Scripts -->
	<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
	<script src="/socket.io/socket.io.js"></script>
	<!-- Seu script JS permanece igual -->
</body>

</html>